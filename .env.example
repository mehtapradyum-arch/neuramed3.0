# App
NEXT_PUBLIC_APP_URL=http://localhost:3000
NODE_ENV=development
DEMO_MODE=false

# NextAuth
NEXTAUTH_URL=http://localhost:3000
NEXTAUTH_SECRET=replace-with-long-random-string
EMAIL_SERVER_HOST=smtp.example.com
EMAIL_SERVER_PORT=587
EMAIL_SERVER_USER=smtp-user
EMAIL_SERVER_PASSWORD=smtp-pass
EMAIL_FROM=NeuraMed <no-reply@neuramed.app>

# Database (PostgreSQL)
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/neuramed?schema=public

# Redis (rate limit + BullMQ)
REDIS_URL=redis://localhost:6379

# OpenAI
OPENAI_API_KEY=sk-xxx

# Storage
VERCEL_BLOB_READ_WRITE_TOKEN=blob-xxx
S3_ENDPOINT=https://s3.example.com
S3_REGION=us-east-1
S3_ACCESS_KEY_ID=AKIAxxx
S3_SECRET_ACCESS_KEY=xxx
S3_BUCKET=neuramed-uploads
STORAGE_PROVIDER=blob # or s3

# Email providers
RESEND_API_KEY=re_xxx
SENDGRID_API_KEY=SG.xxx
EMAIL_PROVIDER=resend # or sendgrid or smtp

# Web Push
VAPID_PUBLIC_KEY=replace-with-base64
VAPID_PRIVATE_KEY=replace-with-base64
VAPID_SUBJECT=mailto:admin@neuramed.app

# Scheduler thresholds
DEFAULT_GRACE_MINUTES=20
DEFAULT_ESCALATION_MINUTES=40
DEPLETION_ALERT_DOSES_BEFORE=2

# Security
MAX_UPLOAD_MB=5
ALLOWED_IMAGE_TYPES=image/jpeg,image/png,image/webp
